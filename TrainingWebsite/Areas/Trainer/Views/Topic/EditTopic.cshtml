@model TrainingWebsite.Models.ChuDe
@{
    ViewData["Title"] = "EditTopic";
    Layout = "~/Areas/Trainer/Views/Shared/_TrainerLayout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.0/jquery.min.js"></script>
<div class="pagetitle">
    <nav>
        <h2>Create Session</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","Course")">Course</a></li>
            <li class="breadcrumb-item">Course List</li>
            <li class="breadcrumb-item">Edit Session</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<form method="post" asp-action="EditTopic" asp-controller="Topic" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IDKhoaHoc">Khoa Hoc ID</label>
        <input type="text" class="form-control" id="inputEmail4" asp-for="@ViewData["ID"]" disabled>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TenChuDe">Ten Chu De</label>
        <input type="text" asp-for="TenChuDe" class="form-control" id="inputAddress" placeholder="Ten Chu De...">
        <span asp-validation-for="TenChuDe" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label>Noi Dung</label>
        <video id="videoplayer" style="width:600px;height:300px; object-fit:cover" src="@Url.Content("~/Video/" + @Model.NoiDung)" controls loop></video>
        <input type="file" asp-for="NoiDung" class="form-control">
        <span asp-validation-for="NoiDung" class="text-danger"></span>
    </div>

    @*<div class="form-group " id="ShowHideMe" style="display:none">
            <label>Noi Dung</label>
            <input type="text" asp-for="NoiDung" class="form-control" placeholder="Link YouTube ...">
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>*@
    <br />
    <button type="submit" class="btn btn-primary">Edit</button>
</form>


