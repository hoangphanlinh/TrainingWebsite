@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<section class="form-02-main">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="_lk_de">
                    <div class="form-03-main">
                        <div class="logo">
                            <img src="~/assets_identity/images/user.png">
                        </div>
                        <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control _ge_de_ol" placeholder="Enter Email" required="" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.Password" class="form-control _ge_de_ol" placeholder="Enter Password" required="" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="checkbox form-group">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe">
                                    <label class="form-check-label" asp-for="Input.RememberMe">
                                        Remember me
                                    </label>
                                </div>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="_btn_04">Log in</button>
                            </div>
                        </form>
                        <div class="form-group nm_lk">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account!</a>
                        </div>
                        <div class="form-group nm_lk"><p>----- Or Login With -----</p></div>
                        <div class="form-group pt-0">
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="_social_04">
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            @if (provider.Name == "Google")
                                            {
                                                <button type="submit" class="btn btn-outline-info" name="provider" value="@provider.Name"><i class="fa fa-google-plus"></i></button>
                                            }
                                            else if (provider.Name == "Facebook")
                                            {
                                                <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name"><i class="fa fa-facebook"></i></button>
                                            }

                                        }
                                    </p>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

